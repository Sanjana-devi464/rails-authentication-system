<% content_for :title, "Post Management" %>

<div class="row mb-4">
  <div class="col-md-8">
    <h2>Post Management</h2>
    <p class="text-muted">Manage all posts across the platform</p>
  </div>
  <div class="col-md-4 text-end">
    <div class="btn-group" role="group">
      <%= link_to admin_path, class: "btn btn-outline-secondary btn-sm" do %>
        <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
      <% end %>
    </div>
  </div>
</div>

<!-- Statistics Row -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-primary"><%= @total_posts %></h4>
        <small class="text-muted">Total Posts</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-success"><%= @published_posts %></h4>
        <small class="text-muted">Published</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-warning"><%= @draft_posts %></h4>
        <small class="text-muted">Drafts</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-info"><%= @posts_this_week %></h4>
        <small class="text-muted">This Week</small>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filters -->
<div class="card admin-card mb-4">
  <div class="card-body">
    <%= search_form_for @q, url: admin_posts_path, method: :get do |f| %>
      <div class="row g-3">
        <div class="col-md-4">
          <%= f.search_field :title_or_body_cont, 
              placeholder: "Search posts...", 
              class: "form-control",
              value: params.dig(:q, :title_or_body_cont) %>
        </div>
        <div class="col-md-2">
          <%= f.select :status_eq, 
              options_for_select([
                ['All Status', ''],
                ['Published', 'published'],
                ['Draft', 'draft']
              ], params.dig(:q, :status_eq)),
              {}, { class: "form-select" } %>
        </div>
        <div class="col-md-2">
          <%= f.select :created_at_gteq, 
              options_for_select([
                ['All Time', ''],
                ['Last 7 days', 7.days.ago],
                ['Last 30 days', 30.days.ago],
                ['Last 3 months', 3.months.ago]
              ], params.dig(:q, :created_at_gteq)),
              {}, { class: "form-select" } %>
        </div>
        <div class="col-md-2">
          <%= f.search_field :user_username_cont, 
              placeholder: "Author username...", 
              class: "form-control",
              value: params.dig(:q, :user_username_cont) %>
        </div>
        <div class="col-md-2">
          <div class="btn-group w-100">
            <%= f.submit "Search", class: "btn btn-admin" %>
            <%= link_to "Reset", admin_posts_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Posts Table -->
<div class="card admin-card">
  <div class="card-header">
    <h5 class="mb-0">All Posts (<%= @posts.total_count %>)</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th><%= sort_link(@q, :id, "ID") %></th>
            <th><%= sort_link(@q, :title, "Title") %></th>
            <th><%= sort_link(@q, :user_username, "Author") %></th>
            <th><%= sort_link(@q, :status, "Status") %></th>
            <th>Comments</th>
            <th><%= sort_link(@q, :created_at, "Created") %></th>
            <th><%= sort_link(@q, :updated_at, "Updated") %></th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td>
                <strong><%= link_to post.title.truncate(40), post_path(post), 
                    class: "text-decoration-none", target: "_blank" %></strong>
                <% if post.body.present? %>
                  <br><small class="text-muted"><%= post.body.truncate(60) %></small>
                <% end %>
              </td>
              <td>
                <%= link_to post.user.display_name, profile_path(post.user), 
                    class: "text-decoration-none", target: "_blank" %>
                <br><small class="text-muted">@<%= post.user.username %></small>
              </td>
              <td>
                <span class="badge bg-<%= post.published? ? 'success' : 'warning' %>">
                  <%= post.status.capitalize %>
                </span>
              </td>
              <td>
                <span class="badge bg-info"><%= post.comments.count %></span>
              </td>
              <td>
                <small><%= post.created_at.strftime('%b %d, %Y') %></small>
                <br><small class="text-muted"><%= post.created_at.strftime('%I:%M %p') %></small>
              </td>
              <td>
                <small><%= time_ago_in_words(post.updated_at) %> ago</small>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to post_path(post), class: "btn btn-outline-primary btn-sm", 
                      title: "View Post", target: "_blank" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_post_path(post), class: "btn btn-outline-secondary btn-sm", 
                      title: "Edit Post", target: "_blank" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admin_destroy_post_path(post), 
                      class: "btn btn-outline-danger btn-sm",
                      title: "Delete Post",
                      method: :delete,
                      data: { 
                        confirm: "Are you sure you want to delete this post: '#{post.title}'? This action cannot be undone and will also delete all comments on this post." 
                      } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- Pagination -->
  <div class="card-footer">
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
