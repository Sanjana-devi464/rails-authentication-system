<!-- Enhanced Posts Index with Advanced Features -->
<% content_for :title, "Discover Posts" %>

<!-- Hero Section -->
<div class="hero-section bg-gradient-primary text-white py-5 mb-5 rounded">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h1 class="display-5 fw-bold mb-3">
          <i class="fas fa-book-open me-3"></i>
          Discover Amazing Content
        </h1>
        <p class="lead mb-4">
          Explore thought-provoking articles, insights, and stories from our community of writers.
        </p>
        <% if user_signed_in? %>
          <%= link_to new_post_path, class: "btn btn-light btn-lg me-3" do %>
            <i class="fas fa-plus-circle me-2"></i>
            Write Your Story
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path, class: "btn btn-light btn-lg me-3" do %>
            <i class="fas fa-user-plus me-2"></i>
            Join Our Community
          <% end %>
        <% end %>
        <button class="btn btn-outline-light btn-lg" data-bs-toggle="modal" data-bs-target="#searchModal">
          <i class="fas fa-search me-2"></i>
          Advanced Search
        </button>
      </div>
      <div class="col-lg-4 text-center">
        <div class="hero-stats">
          <div class="row">
            <div class="col-6">
              <div class="stat-card bg-white bg-opacity-20 rounded p-3 mb-3">
                <h3 class="h4 mb-1"><%= @posts.count %></h3>
                <small>Total Posts</small>
              </div>
            </div>
            <div class="col-6">
              <div class="stat-card bg-white bg-opacity-20 rounded p-3 mb-3">
                <h3 class="h4 mb-1"><%= User.count %></h3>
                <small>Writers</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filter Bar -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <%= form_with url: posts_path, method: :get, class: "row g-3 align-items-center", local: true do |f| %>
          <div class="col-md-4">
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-search text-muted"></i>
              </span>
              <%= f.text_field :search, 
                  value: params[:search], 
                  placeholder: "Search posts by title or content...", 
                  class: "form-control" %>
            </div>
          </div>
          <div class="col-md-2">
            <%= f.select :sort, 
                options_for_select([
                  ['Latest', 'created_at desc'],
                  ['Oldest', 'created_at asc'],
                  ['Title A-Z', 'title asc'],
                  ['Title Z-A', 'title desc'],
                  ['Most Commented', 'comments_count desc']
                ], params[:sort]), 
                { prompt: 'Sort by...' }, 
                { class: "form-select" } %>
          </div>
          <div class="col-md-2">
            <%= f.select :author, 
                options_from_collection_for_select(
                  User.joins(:posts).distinct.order(:first_name), 
                  :id, :display_name, params[:author]
                ), 
                { prompt: 'All Authors' }, 
                { class: "form-select" } %>
          </div>
          <div class="col-md-2">
            <%= f.select :time_range,
                options_for_select([
                  ['This Week', '1.week'],
                  ['This Month', '1.month'],
                  ['Last 3 Months', '3.months'],
                  ['This Year', '1.year']
                ], params[:time_range]),
                { prompt: 'Any Time' },
                { class: "form-select" } %>
          </div>
          <div class="col-md-2">
            <div class="d-grid gap-2 d-md-flex">
              <%= f.submit "Filter", class: "btn btn-primary" %>
              <%= link_to posts_path, class: "btn btn-outline-secondary" do %>
                <i class="fas fa-times"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Results Info -->
<div class="row mb-3">
  <div class="col-md-8">
    <p class="text-muted mb-0">
      <i class="fas fa-info-circle me-1"></i>
      Showing <%= @posts.count %> posts
      <% if params[:search].present? %>
        matching "<strong><%= params[:search] %></strong>"
      <% end %>
    </p>
  </div>
  <div class="col-md-4 text-end">
    <div class="btn-group" role="group">
      <%= link_to posts_path(params.permit(:search, :sort, :author, :time_range).merge(view: 'grid')), 
          class: "btn btn-outline-secondary #{'active' if params[:view] == 'grid' || params[:view].blank?}" do %>
        <i class="fas fa-th-large"></i>
      <% end %>
      <%= link_to posts_path(params.permit(:search, :sort, :author, :time_range).merge(view: 'list')), 
          class: "btn btn-outline-secondary #{'active' if params[:view] == 'list'}" do %>
        <i class="fas fa-list"></i>
      <% end %>
    </div>
  </div>
</div>

<!-- Posts Grid/List -->
<div class="posts-container">
  <% if @posts.any? %>
    <% if params[:view] == 'list' %>
      <!-- List View -->
      <div class="list-view">
        <% @posts.each do |post| %>
          <div class="card mb-4 border-0 shadow-sm hover-lift">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <div class="d-flex align-items-start">
                    <div class="flex-shrink-0 me-3">
                      <%= image_tag post.user.avatar_url(:small), 
                          class: "rounded-circle", 
                          style: "width: 50px; height: 50px;" %>
                    </div>
                    <div class="flex-grow-1">
                      <h5 class="card-title mb-2">
                        <%= link_to post.title, post_path(post), 
                            class: "text-decoration-none text-dark hover-primary" %>
                      </h5>
                      <p class="card-text text-muted mb-3">
                        <%= truncate(strip_tags(post.body), length: 150) %>
                      </p>
                      <div class="d-flex align-items-center text-muted small">
                        <span class="me-3">
                          <i class="fas fa-user me-1"></i>
                          <%= link_to post.user.display_name, "#", class: "text-muted text-decoration-none" %>
                        </span>
                        <span class="me-3">
                          <i class="fas fa-clock me-1"></i>
                          <%= time_ago_in_words(post.created_at) %> ago
                        </span>
                        <span class="me-3">
                          <i class="fas fa-comments me-1"></i>
                          <%= post.comments.count %> comments
                        </span>
                        <span>
                          <i class="fas fa-book-open me-1"></i>
                          <%= post.reading_time %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4 text-end">
                  <div class="post-actions">
                    <%= link_to post_path(post), class: "btn btn-outline-primary btn-sm me-2" do %>
                      <i class="fas fa-eye me-1"></i>
                      Read More
                    <% end %>
                    <% if user_signed_in? && current_user == post.user %>
                      <%= link_to edit_post_path(post), class: "btn btn-outline-secondary btn-sm" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="mt-2">
                    <span class="badge bg-<%= post.published? ? 'success' : 'warning' %>">
                      <%= post.status.humanize %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Grid View (Default) -->
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
              <!-- Post Header -->
              <div class="card-header border-0 bg-white">
                <div class="d-flex align-items-center">
                  <%= image_tag post.user.avatar_url(:small), 
                      class: "rounded-circle me-3", 
                      style: "width: 40px; height: 40px;" %>
                  <div class="flex-grow-1">
                    <h6 class="mb-0">
                      <%= link_to post.user.display_name, "#", 
                          class: "text-decoration-none text-dark" %>
                    </h6>
                    <small class="text-muted">
                      <%= time_ago_in_words(post.created_at) %> ago
                    </small>
                  </div>
                  <span class="badge bg-<%= post.published? ? 'success' : 'warning' %>">
                    <%= post.status.humanize %>
                  </span>
                </div>
              </div>

              <!-- Post Content -->
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-3">
                  <%= link_to post.title, post_path(post), 
                      class: "text-decoration-none text-dark hover-primary" %>
                </h5>
                <p class="card-text text-muted flex-grow-1 mb-3">
                  <%= truncate(strip_tags(post.body), length: 120) %>
                </p>
                
                <!-- Post Stats -->
                <div class="d-flex justify-content-between align-items-center text-muted small mb-3">
                  <span>
                    <i class="fas fa-comments me-1"></i>
                    <%= post.comments.count %>
                  </span>
                  <span>
                    <i class="fas fa-clock me-1"></i>
                    <%= post.reading_time %>
                  </span>
                  <span>
                    <i class="fas fa-eye me-1"></i>
                    <%= rand(50..500) %> views
                  </span>
                </div>

                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                  <%= link_to post_path(post), class: "btn btn-primary btn-sm flex-grow-1" do %>
                    <i class="fas fa-book-open me-1"></i>
                    Read More
                  <% end %>
                  <% if user_signed_in? && current_user == post.user %>
                    <div class="btn-group">
                      <%= link_to edit_post_path(post), class: "btn btn-outline-secondary btn-sm" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to post_path(post), method: :delete, 
                          class: "btn btn-outline-danger btn-sm",
                          data: { 
                            confirm: "Are you sure you want to delete this post?",
                            turbo_method: :delete
                          } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Pagination -->
    <div class="row mt-5">
      <div class="col-12 d-flex justify-content-center">
        <%= paginate @posts, theme: 'twitter-bootstrap-4' if respond_to?(:paginate) %>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-5">
      <div class="empty-state">
        <i class="fas fa-search fa-5x text-muted mb-4"></i>
        <h3 class="text-muted mb-3">No posts found</h3>
        <% if params[:search].present? %>
          <p class="text-muted mb-4">
            No posts match your search "<strong><%= params[:search] %></strong>".
            <br>Try different keywords or 
            <%= link_to "clear your search", posts_path, class: "text-primary" %>.
          </p>
        <% else %>
          <p class="text-muted mb-4">
            Be the first one to share your thoughts with the community!
          </p>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to new_post_path, class: "btn btn-primary btn-lg" do %>
            <i class="fas fa-plus-circle me-2"></i>
            Write Your First Post
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path, class: "btn btn-primary btn-lg" do %>
            <i class="fas fa-user-plus me-2"></i>
            Join to Write Posts
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Advanced Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-search me-2"></i>
          Advanced Search
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with url: posts_path, method: :get, local: true do |f| %>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :search, "Keywords", class: "form-label" %>
              <%= f.text_field :search, value: params[:search], 
                  class: "form-control", 
                  placeholder: "Search in title and content..." %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :author, "Author", class: "form-label" %>
              <%= f.select :author, 
                  options_from_collection_for_select(
                    User.joins(:posts).distinct.order(:first_name), 
                    :id, :display_name, params[:author]
                  ), 
                  { prompt: 'Any Author' }, 
                  { class: "form-select" } %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :sort, "Sort By", class: "form-label" %>
              <%= f.select :sort, 
                  options_for_select([
                    ['Latest First', 'created_at desc'],
                    ['Oldest First', 'created_at asc'],
                    ['Title A-Z', 'title asc'],
                    ['Title Z-A', 'title desc'],
                    ['Most Commented', 'comments_count desc']
                  ], params[:sort]), 
                  { prompt: 'Default Order' }, 
                  { class: "form-select" } %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :time_range, "Time Range", class: "form-label" %>
              <%= f.select :time_range,
                  options_for_select([
                    ['Today', '1.day'],
                    ['This Week', '1.week'],
                    ['This Month', '1.month'],
                    ['Last 3 Months', '3.months'],
                    ['This Year', '1.year']
                  ], params[:time_range]),
                  { prompt: 'Any Time' },
                  { class: "form-select" } %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
          <%= link_to posts_path, class: "btn btn-outline-secondary" do %>
            Clear All
          <% end %>
          <%= f.submit "Search Posts", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Custom Styles -->
<style>
  .bg-gradient-primary {
    background: linear-gradient(135deg, var(--bs-primary) 0%, #6f42c1 100%);
  }

  .hover-lift {
    transition: all 0.3s ease;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
  }

  .hover-primary:hover {
    color: var(--bs-primary) !important;
  }

  .hero-section {
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255,255,255,0.1) 25%, transparent 25%), 
                linear-gradient(-45deg, rgba(255,255,255,0.1) 25%, transparent 25%);
    background-size: 30px 30px;
  }

  .stat-card {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .empty-state i {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0px); }
  }

  .card-title a:hover {
    text-decoration: underline !important;
  }

  .post-actions .btn {
    transition: all 0.2s ease;
  }

  .post-actions .btn:hover {
    transform: scale(1.05);
  }
</style>
