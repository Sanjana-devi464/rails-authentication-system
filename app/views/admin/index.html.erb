<% content_for :title, "Admin Dashboard" %>

<!-- Welcome Header (similar to dashboard) -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card bg-gradient-primary text-white">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-md-8">
            <h1 class="h3 mb-2">üõ°Ô∏è Admin Dashboard</h1>
            <p class="mb-0 opacity-75">
              Comprehensive system management and oversight
            </p>
          </div>
          <div class="col-md-4 text-md-end">
            <div class="text-white">
              <i class="fas fa-shield-alt fa-3x opacity-50"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Statistics Cards Row -->
<div class="row mb-4">
  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h3 class="h4 mb-0 text-primary"><%= @stats[:total_users] %></h3>
            <p class="text-muted small mb-0">Total Users</p>
          </div>
          <i class="fas fa-users fa-2x text-primary opacity-25"></i>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h3 class="h4 mb-0 text-success"><%= @stats[:total_posts] %></h3>
            <p class="text-muted small mb-0">Total Posts</p>
          </div>
          <i class="fas fa-file-alt fa-2x text-success opacity-25"></i>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h3 class="h4 mb-0 text-info"><%= @stats[:total_comments] %></h3>
            <p class="text-muted small mb-0">Total Comments</p>
          </div>
          <i class="fas fa-comments fa-2x text-info opacity-25"></i>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h3 class="h4 mb-0 text-warning"><%= @stats[:online_users] %></h3>
            <p class="text-muted small mb-0">Users Online</p>
          </div>
          <i class="fas fa-circle fa-2x text-warning opacity-25"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Monthly Stats and Quick Actions -->
<div class="row mb-4">
  <div class="col-md-4 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white">
        <h5 class="card-title mb-0"><i class="fas fa-calendar-alt me-2 text-primary"></i>This Month</h5>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-4">
            <h6 class="text-primary mb-1"><%= @stats[:users_this_month] %></h6>
            <small class="text-muted">New Users</small>
          </div>
          <div class="col-4">
            <h6 class="text-success mb-1"><%= @stats[:posts_this_month] %></h6>
            <small class="text-muted">New Posts</small>
          </div>
          <div class="col-4">
            <h6 class="text-info mb-1"><%= @stats[:comments_this_month] %></h6>
            <small class="text-muted">Comments</small>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white">
        <h5 class="card-title mb-0"><i class="fas fa-bolt me-2 text-warning"></i>Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to admin_users_path, class: "btn btn-outline-primary btn-sm" do %>
            <i class="fas fa-users me-1"></i> Manage Users
          <% end %>
          <%= link_to admin_posts_path, class: "btn btn-outline-success btn-sm" do %>
            <i class="fas fa-file-alt me-1"></i> Manage Posts
          <% end %>
          <%= link_to admin_analytics_path, class: "btn btn-outline-info btn-sm" do %>
            <i class="fas fa-chart-bar me-1"></i> View Analytics
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-3">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white">
        <h5 class="card-title mb-0"><i class="fas fa-server me-2 text-success"></i>System Status</h5>
      </div>
      <div class="card-body">
        <div class="mb-2 d-flex justify-content-between">
          <small class="text-muted">Total Activities:</small>
          <strong><%= @stats[:total_activities] %></strong>
        </div>
        <div class="mb-2 d-flex justify-content-between">
          <small class="text-muted">Environment:</small>
          <span class="badge bg-<%= Rails.env.production? ? 'danger' : 'warning' %>">
            <%= Rails.env.capitalize %>
          </span>
        </div>
        <div class="mb-2 d-flex justify-content-between">
          <small class="text-muted">Rails Version:</small>
          <strong><%= Rails.version %></strong>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity -->
<div class="row">
  <!-- Recent Users -->
  <div class="col-md-6 mb-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users me-2 text-primary"></i>Recent Users</h5>
        <%= link_to admin_users_path, class: "btn btn-outline-primary btn-sm" do %>
          View All <i class="fas fa-arrow-right ms-1"></i>
        <% end %>
      </div>
      <div class="card-body">
        <% if @recent_users.any? %>
          <% @recent_users.each do |user| %>
            <div class="d-flex align-items-center mb-3 pb-2 border-bottom">
              <%= image_tag user.avatar_url(:small), 
                  class: "rounded-circle me-3", 
                  style: "width: 40px; height: 40px; object-fit: cover;" %>
              <div class="flex-grow-1">
                <strong class="d-block"><%= user.display_name %></strong>
                <small class="text-muted"><%= user.email %></small>
              </div>
              <div class="text-end">
                <small class="text-muted d-block">
                  <%= time_ago_in_words(user.created_at) %> ago
                </small>
                <% if user.admin? %>
                  <span class="badge bg-danger">Admin</span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-3">
            <i class="fas fa-user-plus fa-2x text-muted mb-2"></i>
            <p class="text-muted mb-0">No recent users</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Recent Posts -->
  <div class="col-md-6 mb-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-file-alt me-2 text-success"></i>Recent Posts</h5>
        <%= link_to admin_posts_path, class: "btn btn-outline-success btn-sm" do %>
          View All <i class="fas fa-arrow-right ms-1"></i>
        <% end %>
      </div>
      <div class="card-body">
        <% if @recent_posts.any? %>
          <% @recent_posts.each do |post| %>
            <div class="d-flex align-items-center mb-3 pb-2 border-bottom">
              <div class="flex-grow-1">
                <strong class="d-block">
                  <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark" %>
                </strong>
                <small class="text-muted">by <%= post.user.display_name %></small>
              </div>
              <div class="text-end">
                <span class="badge bg-<%= post.published? ? 'success' : 'warning' %> d-block mb-1">
                  <%= post.status.capitalize %>
                </span>
                <small class="text-muted">
                  <%= time_ago_in_words(post.created_at) %> ago
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-3">
            <i class="fas fa-file-plus fa-2x text-muted mb-2"></i>
            <p class="text-muted mb-0">No recent posts</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Recent Comments -->
<div class="row">
  <div class="col-md-12 mb-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-comments me-2 text-info"></i>Recent Comments</h5>
        <%= link_to admin_comments_path, class: "btn btn-outline-info btn-sm" do %>
          View All <i class="fas fa-arrow-right ms-1"></i>
        <% end %>
      </div>
      <div class="card-body">
        <% if @recent_comments.any? %>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th><i class="fas fa-user me-1"></i>Author</th>
                  <th><i class="fas fa-file-alt me-1"></i>Post</th>
                  <th><i class="fas fa-comment me-1"></i>Comment</th>
                  <th><i class="fas fa-calendar me-1"></i>Date</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_comments.each do |comment| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <%= image_tag comment.user.avatar_url(:small), 
                            class: "rounded-circle me-2", 
                            style: "width: 32px; height: 32px; object-fit: cover;" %>
                        <span><%= comment.user.display_name %></span>
                      </div>
                    </td>
                    <td>
                      <%= link_to comment.post.title.truncate(30), post_path(comment.post), 
                          class: "text-decoration-none text-dark" %>
                    </td>
                    <td><%= comment.content.truncate(50) %></td>
                    <td>
                      <small class="text-muted">
                        <%= time_ago_in_words(comment.created_at) %> ago
                      </small>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-3">
            <i class="fas fa-comment-slash fa-2x text-muted mb-2"></i>
            <p class="text-muted mb-0">No recent comments</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activities -->
<div class="row">
  <div class="col-md-12">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-history me-2 text-secondary"></i>Recent System Activities</h5>
      </div>
      <div class="card-body">
        <% if @recent_activities.any? %>
          <% @recent_activities.each do |activity| %>
            <div class="d-flex align-items-center mb-3 pb-2 border-bottom">
              <%= image_tag activity.user.avatar_url(:small), 
                  class: "rounded-circle me-3", 
                  style: "width: 32px; height: 32px; object-fit: cover;" %>
              <div class="flex-grow-1">
                <strong><%= activity.user.display_name %></strong>
                <span class="ms-2"><%= activity.formatted_description %></span>
              </div>
              <div>
                <small class="text-muted">
                  <%= time_ago_in_words(activity.created_at) %> ago
                </small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-3">
            <i class="fas fa-history fa-2x text-muted mb-2"></i>
            <p class="text-muted mb-0">No recent activities</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
