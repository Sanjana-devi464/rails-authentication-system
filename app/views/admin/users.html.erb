                <strong><%= user.username %></strong>
                <% if user.admin? %>
                  <span class="badge bg-danger ms-1">Admin</span>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td><%= user.full_name %></td>
              <td>
                <small><%= user.created_at.strftime('%b %d, %Y') %></small>
              </td>
              <td>
                <span class="badge bg-primary"><%= user.posts.count %></span>
              </td>
              <td>
                <span class="badge bg-info"><%= user.comments.count %></span>
              </td>
              <td>
                <% if user.last_seen_at %>
                  <small class="<%= user.online? ? 'text-success' : 'text-muted' %>">
                    <%= time_ago_in_words(user.last_seen_at) %> ago
                  </small>
                <% else %>
                  <small class="text-muted">Never</small>
                <% end %>
              </td>
              <td>
                <% if user.online? %>
