<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h6><i class="bi bi-exclamation-triangle"></i> <%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource.class.model_name.human.downcase %> from being saved:</h6>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
