                        class: "btn btn-outline-danger btn-sm",
                        title: "Delete User",
                        method: :delete,
                        data: { 
                          confirm: "Are you sure you want to delete #{user.display_name}? This action cannot be undone and will delete all their posts and comments." 
                        } do %>
                      üóëÔ∏è
                    <% end %>
                  <% else %>
                    <span class="btn btn-outline-secondary btn-sm disabled" title="Cannot delete super admin">
                      üõ°Ô∏è
                    </span>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- Pagination -->
  <div class="card-footer">
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
