<% content_for :title, "Comment Management" %>

<div class="row mb-4">
  <div class="col-md-8">
    <h2>Comment Management</h2>
    <p class="text-muted">Moderate all comments across the platform</p>
  </div>
  <div class="col-md-4 text-end">
    <div class="btn-group" role="group">
      <%= link_to admin_path, class: "btn btn-outline-secondary btn-sm" do %>
        <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
      <% end %>
    </div>
  </div>
</div>

<!-- Statistics Row -->
<div class="row mb-4">
  <div class="col-md-4">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-primary"><%= @total_comments %></h4>
        <small class="text-muted">Total Comments</small>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-success"><%= @comments_this_week %></h4>
        <small class="text-muted">This Week</small>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card admin-card text-center">
      <div class="card-body">
        <h4 class="text-info"><%= @avg_comments_per_post %></h4>
        <small class="text-muted">Avg per Post</small>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filters -->
<div class="card admin-card mb-4">
  <div class="card-body">
    <%= search_form_for @q, url: admin_comments_path, method: :get do |f| %>
      <div class="row g-3">
        <div class="col-md-4">
          <%= f.search_field :content_cont, 
              placeholder: "Search comment content...", 
              class: "form-control",
              value: params.dig(:q, :content_cont) %>
        </div>
        <div class="col-md-2">
          <%= f.search_field :user_username_cont, 
              placeholder: "Author username...", 
              class: "form-control",
              value: params.dig(:q, :user_username_cont) %>
        </div>
        <div class="col-md-2">
          <%= f.search_field :post_title_cont, 
              placeholder: "Post title...", 
              class: "form-control",
              value: params.dig(:q, :post_title_cont) %>
        </div>
        <div class="col-md-2">
          <%= f.select :created_at_gteq, 
              options_for_select([
                ['All Time', ''],
                ['Last 7 days', 7.days.ago],
                ['Last 30 days', 30.days.ago],
                ['Last 3 months', 3.months.ago]
              ], params.dig(:q, :created_at_gteq)),
              {}, { class: "form-select" } %>
        </div>
        <div class="col-md-2">
          <div class="btn-group w-100">
            <%= f.submit "Search", class: "btn btn-admin" %>
            <%= link_to "Reset", admin_comments_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Comments Table -->
<div class="card admin-card">
  <div class="card-header">
    <h5 class="mb-0">All Comments (<%= @comments.total_count %>)</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th><%= sort_link(@q, :id, "ID") %></th>
            <th>Comment</th>
            <th><%= sort_link(@q, :user_username, "Author") %></th>
            <th><%= sort_link(@q, :post_title, "Post") %></th>
            <th><%= sort_link(@q, :created_at, "Created") %></th>
            <th><%= sort_link(@q, :updated_at, "Updated") %></th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.id %></td>
              <td>
                <div class="comment-content" style="max-width: 300px;">
                  <%= simple_format(comment.content.truncate(150)) %>
                </div>
              </td>
              <td>
                <%= link_to comment.user.display_name, profile_path(comment.user), 
                    class: "text-decoration-none", target: "_blank" %>
                <br><small class="text-muted">@<%= comment.user.username %></small>
              </td>
              <td>
                <%= link_to comment.post.title.truncate(30), post_path(comment.post), 
                    class: "text-decoration-none", target: "_blank" %>
                <br><small class="text-muted">by <%= comment.post.user.display_name %></small>
              </td>
              <td>
                <small><%= comment.created_at.strftime('%b %d, %Y') %></small>
                <br><small class="text-muted"><%= comment.created_at.strftime('%I:%M %p') %></small>
              </td>
              <td>
                <% if comment.updated_at != comment.created_at %>
                  <small><%= time_ago_in_words(comment.updated_at) %> ago</small>
                  <br><small class="text-muted">(edited)</small>
                <% else %>
                  <small class="text-muted">-</small>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to post_path(comment.post, anchor: "comment-#{comment.id}"), 
                      class: "btn btn-outline-primary btn-sm", 
                      title: "View Comment", target: "_blank" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_comment_path(comment), 
                      class: "btn btn-outline-secondary btn-sm", 
                      title: "Edit Comment", target: "_blank" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admin_destroy_comment_path(comment), 
                      class: "btn btn-outline-danger btn-sm",
                      title: "Delete Comment",
                      method: :delete,
                      data: { 
                        confirm: "Are you sure you want to delete this comment by #{comment.user.display_name}? This action cannot be undone." 
                      } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- Pagination -->
  <div class="card-footer">
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<style>
  .comment-content {
    font-size: 0.9em;
    line-height: 1.4;
  }
  
  .comment-content p {
    margin-bottom: 0.5rem;
  }
  
  .comment-content p:last-child {
    margin-bottom: 0;
  }
</style>
